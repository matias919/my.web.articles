    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
    <script>
    
        $("#menu").hide();
        $("#mystery-articles").hide();
        $("#quiz-page").hide();
        $("#history-articles").hide();
        
        $("#button").on("click", function(event) {
            event.preventDefault();
            $("#menu").slideDown(600);
        });
        $("#back").on("click", function(event) {
           $("#menu").slideUp(600); 
        });
        $("#search-button").on("click", function(event) {
            event.preventDefault();
        });
        $("#front").on("click", function(event) {
            event.preventDefault();
            $("#front-articles").slideDown();
            $("#mystery-articles").hide();
             $("#quiz-page").hide();
             $("#history-articles").hide();
        });
        $("#mystery").on("click", function(event) {
            event.preventDefault();
            $("#front-articles").hide();
            $("#mystery-articles").slideDown();
             $("#quiz-page").hide();
             $("#history-articles").hide();
        });
        $("#horror").on("click", function(event) {
            event.preventDefault();
            $("#front-articles").hide();
            $("#mystery-articles").hide();
             $("#quiz-page").hide();
             $("#history-articles").hide();
        });
        $("#history").on("click", function(event) {
            event.preventDefault();
            $("#front-articles").hide();
            $("#mystery-articles").hide();
             $("#quiz-page").hide();
             $("#history-articles").slideDown();
        });
         $("#quiz").on("click", function(event) {
            event.preventDefault();
            $("#front-articles").hide();
            $("#mystery-articles").hide();
            $("#quiz-page").slideDown();
            $("#history-articles").hide();
        });
    </script>
